<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% if flash[:success] || flash[:notice] %>
    <div class="alert alert-success" role="alert"><%= flash[:success] || flash[:notice] %></div>
  <% elsif flash[:error] || flash[:alert] %>
    <div class="alert alert-danger" role="alert"><%= flash[:error] || flash[:alert] %></div>
  <% end %>
  <%= render partial: 'common/header' unless controller_name == "home" && action_name == "land" %>
  <%= yield %>
</div>

</body>
</html>
