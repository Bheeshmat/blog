<% if task.not_started? %>
<li>
  <%= task.title %>
  (<%= link_to "Start", task_path(task, status: Task::Status::STARTED), method: :patch, remote: true %>)
</li>
<% elsif task.started? %>
<li id="<%= dom_id(task) %>">
  <%= task.title %>
  (
  <%= link_to "Finish", task_path(task, status: Task::Status::FINISHED), method: :patch, remote: true %>
  |
  <%= link_to "Shelf", task_path(task, status: Task::Status::NOT_STARTED), method: :patch, remote: true %>
  )
</li>
<% else %>
<li>
  <%= task.title %>
  (<%= link_to "Rework", task_path(task, status: Task::Status::STARTED), method: :patch, remote: true %>)
</li>
<% end %>
